<Window x:Class="HelloWPF.StackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="StackWindow" Height="300" Width="300">
    <StackPanel x:Name="spMain" Orientation="Horizontal">
        <Border Background="Brown" Padding="50" />
        <Border Background="Green" Padding="50" />
        <Border Background="Yellow" Padding="50" />
    </StackPanel>
</Window>
