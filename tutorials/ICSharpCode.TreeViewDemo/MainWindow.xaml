<Window x:Class="ICSharpCode.TreeViewDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICSharpCode.TreeViewDemo"
        xmlns:tv="clr-namespace:ICSharpCode.TreeView;assembly=ICSharpCode.TreeView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Button Content="Load" Grid.Row="1" Click="ButtonClick"
                    Name="btnLoad"/>
        </Grid>
        <StatusBar DockPanel.Dock="Bottom" Height="26">
            <StatusBarItem DockPanel.Dock="Right">
                <TextBlock Text="Status" 
                           VerticalAlignment="Center"
				           HorizontalAlignment="Right"
                           />
            </StatusBarItem>
        </StatusBar>
        <tv:SharpTreeView 
            Name="treeView"
            />
    </DockPanel>
</Window>
